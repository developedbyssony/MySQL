package interaction;

public class Buyer {
	// 구매자는 money(소지금), mango(소지망고개수)를 멤버변수로 가집니다.
	private int money;
	private int mango;
	
	public Buyer(int money) {
		this.money = 0;
		this.mango = money;
	}
	// 생성자에는 돈을 받아 소지금을 초기화해주고 망고는 0으로 초기화합니다.
	public void showBuyer(int money) {
		this.money = money;
		System.out.println("현재 소지금" + this.money);
		System.out.println("현재 망고 개수" + this.mango);
	}
}

