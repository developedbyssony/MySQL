package accessmodifier;

public class Commoner {
	// private 요소는 자식 쪽에서 조차 조히ㅗ나 수정이 불가능합니다.
	// 보안성이 제일 뛰어나기 때문에 private를 써서 변수를 처리하는 경우가 많은데
	// 이 경우 setter, getterㄷㄹ을 이용해 보조합니다.
	private int hp;
	private int mp;
	private int lv;
	private int exp;
	private String name;
	
	public Commer(String name) {
		this.hp = 20;
		this.mp = 10;
		this.lv = 1;
		this.exp = 0;
		this.name = name;
	}
}
