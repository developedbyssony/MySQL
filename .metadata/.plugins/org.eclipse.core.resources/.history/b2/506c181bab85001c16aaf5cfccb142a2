package Math1;

public class Math06P480 {

	public static void main(String[] args) {
		// 가위바위보 게임을 만들어보겠습니다.
		// Math.random()을 이용해 1/3 확률로 가위,바위,보를 부여받으며
		// 가위 > 보, 바위 > 가위, 보 > 가위의 상성을 가집니다.
		// 같은 요소가 나오면 무승부입니다.
		// 힌트) 컴퓨터가 이기는 경우, 내가 이기는 경우, 비기는 경우를 따져서
		// 조건식에 ||를 사용합니다.
		
		// 0 = 가위, 1 = 바위, 2 = 보
		// 0 > 2, 1 > 0, 2 > 1
		
		final int SCISSORS = 0;
		final int ROCK = 1;
		final int PAPER = 2;
		
		String[] items = {"가위","바위","보"};
		
		int myValue = (int)(Math.random() * 3+1); 
		int comValue = (int)(Math.random() * 3+1); 
			
		if (a == d)	{
			System.out.println("무승부입니다.");
			System.out.println("내가 뽑은 것 :" + a);
			System.out.println("컴퓨터가 뽑은 것 :" + d);}
		
		else if (b == e) {
			System.out.println("무승부입니다.");
			System.out.println("내가 뽑은 것 :" + b);
			System.out.println("컴퓨터가 뽑은 것 :" + e);}
		
		else if (c == f) {
			System.out.println("무승부입니다.");
			System.out.println("내가 뽑은 것 :" + c);
			System.out.println("컴퓨터가 뽑은 것 :" + f);}
		
		else if (a > f) {
			System.out.println("내가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + a);
			System.out.println("컴퓨터가 뽑은 것 :" + f);}
		
		else if (b > d)	{
			System.out.println("내가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + b);
			System.out.println("컴퓨터가 뽑은 것 :" + d);}
		
		else if (c > d) {
			System.out.println("내가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + c);
			System.out.println("컴퓨터가 뽑은 것 :" + d); }
		
		else if (d > c) {
			System.out.println("컴퓨터가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + c);
			System.out.println("컴퓨터가 뽑은 것 :" + d); }
		
		else if (e > a) {
			System.out.println("컴퓨터가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + c);
			System.out.println("컴퓨터가 뽑은 것 :" + d); }
		
		else if (f > a) {
			System.out.println("컴퓨터가 승리했습니다.");
			System.out.println("내가 뽑은 것 :" + c);
			System.out.println("컴퓨터가 뽑은 것 :" + d); }
		
		// 이 코드에서 a일때 가위.. 이런식으로 출력되게 하고싶다.. -> 상수쓰기
		
	}
}
